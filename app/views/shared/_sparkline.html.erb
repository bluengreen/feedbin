<svg class="sparkline" width="<%= sparkline.width %>" height="<%= sparkline.height %>" stroke-width="<%= sparkline.stroke %>">
    <linearGradient id="gradient" x1="0" x2="0" y1="0" y2="1">
        <stop class="gradient" offset="0%" stop-opacity="0.8"/>
        <stop class="gradient" offset="100%" stop-opacity="0"/>
    </linearGradient>
    <polygon points="<%= sparkline.fill %>" fill="url(#gradient)"></polygon>
    <polyline points="<%= sparkline.line %>"></polyline>
</svg>
