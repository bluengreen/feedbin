<div class="<%= user.display_prefs %>">
    <div class="sticky-modal-header">
        <div class="modal-sticky-header-inner">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                <%= svg_tag 'icon-full-screen-close-small', size: '16x16' %>
            </button>
            <div class="entry-inner">
                <p class="post-meta">
                    Conversation
                </p>
            </div>
        </div>
    </div>

    <div class="entry-inner">
        <div class="tweet-wrap">
            <style>
                <%= render partial: "thread_css", locals: {entry: entry, tweets: tweets} %>
            </style>
            <div class="tweet-wrap">
                <%= render partial: "shared/tweet", collection: tweets, locals: {entry: entry, parent: parent, css: "quoted-tweet reply", include_media: true} %>
            </div>
            <script>
                feedbin.localizeTime();
            </script>
        </div>
    </div>
</div>
