<% @class = "settings-body settings-#{params[:action]} theme-#{@user.theme || "day"}"%>
<% content_for :content do %>
<div class="settings settings-page">
    <div class="application-messages"><a href="" class="message-content" data-behavior="messages"></a></div>
    <script>
        <%= render partial: "shared/message_flash", locals: {flash: flash} %>
    </script>
    <div class="settings-inner">
        <%= render partial: "shared/settings_nav" %>
        <div class="settings-content">
            <%= render partial: "shared/hamburger_menu_button" %>
            <%= yield %>
        </div>
    </div>
    <%= render partial: "shared/svg" %>
    <%= render partial: "shared/modals/settings_modal" %>
</div>
<% end %>
<%= render template: "layouts/application" %>
